package utils {	import flash.filesystem.File;	
	/**	 * @author jankees	 */	public class FileValidator {		public static function filetype(inFiles:Array,inTypes:Array):Boolean {			var leni:uint = inFiles.length;									for (var i:uint = 0;i < leni; i++) {				var file:File = inFiles[i];								if(i==0) var chosenExtension:String = file.extension;            					var fileTest:Boolean = false;            					var lenj:uint = inTypes.length;				for (var j:uint = 0;j < lenj; j++) {					if(file.extension == inTypes[j]) fileTest = true;				}								if(chosenExtension != file.extension) return false;								chosenExtension = file.extension;								if(!fileTest) return false;			}			return true;		}	}}